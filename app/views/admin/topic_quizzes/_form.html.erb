<%=  form_for ([:admin, @topic_quiz]) do |f|%>
  <% if topic_quiz.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(topic_quiz.errors.count, "error") %> prohibited this topic_quiz from being saved:</h2>

      <ul>
      <% topic_quiz.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, id: :topic_quiz_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, id: :topic_quiz_description, class: "form-control", rows: "5" %>
  </div>

  <div class="form-group">
    <%= f.label :rules %>
    <%= f.text_area :rules, id: :topic_quiz_rules, class: "form-control", rows: "5" %>
  </div>

  <div id="multiple_choices">
    <%= f.fields_for :multiple_choices do |multiple_choice| %>
      <%= render 'multiple_choice_fields', f: multiple_choice %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Multiple Choice', f, :multiple_choices ,class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="actions text-center mt-2" style="float: left">
    <%= f.submit class: "btn btn-primary"   %>
  </div>
<% end %>


