<div class="container">
  <div class="col-md-6 offset-md-3">

<p id="notice"><%= notice %></p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= link_to admin_topic_path(topic) ,class: "btn btn-primary" do %>
          <i class="fa fa-eye"></i> Show
          <% end %>
          
        </td>
        <td><%= link_to edit_admin_topic_path(topic),class: "btn btn-warning" do%>
          <i class="fa fa-eye"></i> Edit
          <% end %>
        </td>
        <td><%= link_to  admin_topic_path(topic), class: "btn btn-danger",method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="fa fa-eye"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New topic', new_admin_topic_path,class: "btn btn-primary" %>
</div>
</div>
