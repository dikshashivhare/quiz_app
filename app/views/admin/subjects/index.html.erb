<div class="container">
<p id="notice"><%= notice %></p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
         <td><%= subject.description %></td>
         <td><%= link_to  admin_subject_path(subject),class: "btn btn-primary" do%>
           <i class="fa fa-eye"></i> Show
            <% end %>
         </td>
        <td><%= link_to  edit_admin_subject_path(subject) ,class: "btn btn-warning" do%>
          <i class="fa fa-pencil"></i> Edit
          <% end %>
        </td>
        <td><%= link_to  admin_subject_path(subject),class: "btn btn-danger" ,method: :delete, data: { confirm: 'Are you sure?' }  do%>
            <i class="fa fa-trash" ></i> Destroy
             <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New subject', new_admin_subject_path,class: "btn btn-primary" %>
</div>



